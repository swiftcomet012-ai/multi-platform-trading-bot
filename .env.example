# Trading Platform Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# BINANCE (Crypto)
# =============================================================================
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true  # Use testnet for development

# =============================================================================
# EXNESS / MT5 (Forex)
# =============================================================================
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=Exness-MT5Trial  # or Exness-MT5Real

# =============================================================================
# AI PROVIDERS
# =============================================================================
# Gemini (Primary)
GEMINI_API_KEY=your_gemini_api_key

# OpenAI (Fallback 1)
OPENAI_API_KEY=your_openai_api_key

# Groq (Fallback 2)
GROQ_API_KEY=your_groq_api_key

# Qwen (Optional)
QWEN_API_KEY=your_qwen_api_key

# Hugging Face (Optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///data/trading.db
# DATABASE_URL=postgresql://user:password@localhost:5432/trading

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TRADING SETTINGS
# =============================================================================
PAPER_MODE=true  # IMPORTANT: Set to false only after 24h paper trading
MAX_POSITION_PCT=0.05  # 5% of balance per position
MAX_DAILY_LOSS_PCT=0.03  # 3% daily loss limit
MAX_OPEN_POSITIONS=5
